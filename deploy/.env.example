# BillFlow Production Environment Variables
# Copy this file to .env and fill in your values

# AWS Configuration
AWS_REGION=il-central-1
AWS_ACCOUNT_ID=123456789012
ECR_REGISTRY=123456789012.dkr.ecr.il-central-1.amazonaws.com

# Database (RDS)
DB_HOST=billflow-db.xxxxxx.il-central-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=billflow_db
DB_USER=billflow_admin
DB_PASSWORD=your-strong-password-here

# Application
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
FRONTEND_URL=https://billflow.yourdomain.com

# Docker
IMAGE_TAG=latest
